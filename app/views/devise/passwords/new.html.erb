<div class="forgot-password-container">
<p class="text-center create-password-img"><%= image_tag "skeeter_logo_bare.png", width: "250px", class: "bug-img" %></p>
<h1 class="set-password">Forgot your password?</h1>
	

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>


  <div class="form-group">
  	<label class="sr-only">Email</label>
  	<%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Email" %>
  </div>


  

  <div><%= f.submit "Email Instructions", class: "btn-alt btn-primary" %></div>
<% end %>


</div>