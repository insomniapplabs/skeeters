<div class="edit-profile-container">
  <h2 class="dash-updates">Update Profile</h2>
  <div class="current-profile-img">
    <% if @profile.image_url.present? %>
    <%= image_tag @profile.image_url.to_s, class: "img-thumbnail img-bottom-profile", width: "200px" %>
    <% end %>
  </div>
  <%= form_for @profile, html: {multipart: true, id: "new-profile-f"} do |f| %>
    <div class="form-group">
      <label class="sr-only">First Name</label>
      <%= f.text_field :player_first_name, placeholder: "First Name", autofocus: true, autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Last Name</label>
      <%= f.text_field :player_last_name, placeholder: "Last Name", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Jersey Number</label>
      <%= f.text_field :player_number, placeholder: "Player Jersey Number", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Favorite Team</label>
      <%= f.text_field :player_favorite_team, placeholder: "Favorite Team", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Favorite Player</label>
      <%= f.text_field :player_favorite_player, placeholder: "Favorite Player", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Favorite Subject</label>
      <%= f.text_field :player_favorite_subject, placeholder: "Favorite Subject", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Career</label>
      <%= f.text_field :player_career, placeholder: "Player Career", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Favorite Song</label>
      <%= f.text_field :player_favorite_song, placeholder: "Favorite Song", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Favorite Book</label>
      <%= f.text_field :player_favorite_book, placeholder: "Favorite Book", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Favorite Movie</label>
      <%= f.text_field :player_favorite_movie, placeholder: "Favorite Movie", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Favorite Food</label>
      <%= f.text_field :player_favorite_food, placeholder: "Favorite Food", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <label class="sr-only">Nickname</label>
      <%= f.text_field :player_nickname, placeholder: "Nickname", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.submit "Update Profile", class: "btn-alt btn-primary" %>
    </div>
  <% end %>
</div>